template(name='courses')
    .ui.stackable.padded.grid
        .three.column.row
            each courses
                .column
                    a(href="/course/#{slug}")
                        .ui.segment.home_segment
                            //- img.ui.circular.tiny.image(src="{{c.url image width=400 height=200 crop='fill'}}")
                            .ui.large.header #{title}
                            .ui.grey.small.header !{description}
                
                
template(name='course')
    .ui.padded.stackable.grid
        .ui.three.wide.column
            a.ui.big.button(href="/courses")
                i.chevron.left.icon
                i.course.icon
                //- +i name='apartment' classes='ui inline mini image'
                |courses
            if is_dev
                .ui.icon.input
                    i.home.icon
                    input.unit_number(type='number' placeholder='unit number')
                .ui.icon.input
                    i.course.icon
                    input.course_number(type='number' placeholder='unit course number')
                .ui.icon.input
                    i.header.icon
                    input.course_label(type='text' placeholder='unit course label')

            h1.ui.header course #{title}
            each course.course_numbers
                .ui.basic.label #{this}
        .ui.thirteen.wide.column
            .ui.three.cards
                each units
                    +unit_card

    
template(name='unit_card')
    //- .ui.card    
    a.ui.card(href="/unit/#{_id}")
        .content
            .ui.large.header #{unit_number}
            //- .ui.small.header course #{course_code}
            //- a.ui.large.button(href="/unit/#{_id}")
            //-     i.yellow.right.chevron.icon
            div
            //- +i name='rent'
            i.dollar.icon
            each owners
                .ui.basic.label
                    if image_id
                        img.ui.avatar.image(src="{{c.url image_id width=100 height=100 gravity='face' crop='fill'}}")
                    |#{first_name} #{last_name}
            div
            i.home.icon
            //- +i name='home'
            each residents
                .ui.basic.label
                    if image_id
                        img.ui.avatar.image(src="{{c.url image_id width=100 height=100 gravity='face' crop='fill'}}")
                    |#{first_name} #{last_name}
            div
            //- if is_springdale
            //-     +unit_permits
            //-     +i name='badge'
            //-     each permits
            //-         .ui.basic.label #{license_plate}
            .ui.small.header #{notes}
            if is_dev
                +number_view key='course_number' direct=true
                +number_view key='unit_number' direct=true
                    
